# vim:ft=sshconfig
#
# Once you setup a host in here, you can use the following command to
# automatically connect and install your public host key to enable passwordless
# SSH-key logins:
#	 ssh-copy-id <host>

Host *
	AddKeysToAgent yes
	IdentityFile ~/.ssh/id_rsa

##### BATS #####

Host gitea.batswireless.lcl
	HostName gitea.batswireless.lcl
	IdentityFile ~/.ssh/id_ed25519_bats

##### AURA #####

Host aura-aws-mocull-develop
	HostName ec2-3-219-63-96.compute-1.amazonaws.com
	User arch
	IdentityFile ~/.ssh/mocull-develop-keypair.pem

Host aura-aws-cgt
	HostName 10.248.6.160
	User ubuntu
	IdentityFile ~/.ssh/vt-test-key-pair-9-29-23.pem

Host aura-jump-lab
	HostName 44.200.213.43
	User ubuntu
	ForwardAgent yes
	IdentityFile ~/.ssh/ru-config-test-key-pair.pem

Host aura-lab-dell-xr11
	HostName 10.101.200.50
	User aura-lab-admin
	ForwardAgent yes
	ProxyJump aura-jump-lab

Host aura-lab-jump-ars
	HostName 10.101.201.6
	User pi
	ForwardAgent yes
	ProxyJump aura-jump-lab

Host aura-lab-ru
