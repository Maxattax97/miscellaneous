# vim:ft=sshconfig
#
# Once you setup a host in here, you can use the following command to
# automatically connect and install your public host key to enable passwordless
# SSH-key logins:
#	 ssh-copy-id <host>
#
# NOTE: Includes must be at the top of the file!

Include ~/.ssh/aura_ssh_config

Host *
	AddKeysToAgent yes
	IdentityFile ~/.ssh/id_rsa

Host maxocull.com
	HostName maxocull.com
	User entourage
	IdentityFile ~/.ssh/id_rsa
	ForwardX11 yes
	ForwardX11Trusted yes

Host leviathan
	HostName 192.168.1.11
	#ProxyJump maxocull.com
	User max
	IdentityFile ~/.ssh/id_rsa
	ForwardX11 yes
	ForwardX11Trusted yes

Host citadel
	HostName 192.168.1.13
	#ProxyJump maxocull.com
	User citadel
	IdentityFile ~/.ssh/id_rsa
	ForwardX11 yes
	ForwardX11Trusted yes

Host rb3011
	HostName 192.168.1.1
	User max
	IdentityFile ~/.ssh/id_rsa

Host capax
	HostName 192.168.1.2
	User max
	IdentityFile ~/.ssh/id_rsa

host libreelec
	HostName 192.168.1.30
	User root
	IdentityFile ~/.ssh/id_rsa
	ForwardX11 yes
	ForwardX11Trusted yes
