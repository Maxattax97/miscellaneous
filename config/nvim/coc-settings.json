{
  "ansible.ansible.useFullyQualifiedCollectionNames": false,
  "ansible.ansibleLint.enabled": true,
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.floatActions": true,
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "js",
    "javascript",
    "json",
    "ts",
    "typescript",
    "html",
    "yml",
    "yaml",
    "rust",
    "c",
    "cpp",
    "h",
    "hpp"
  ],
  "coc.preferences.promptInput": true,
  "coc.source.ansible.filetypes": [
    "yaml.ansible"
  ],
  "coc.source.yaml.filetypes": [
    "yaml"
  ],
  "codeLens.enable": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": true,
  "diagnostic.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ]] ",
  "diagnostic.warningSign": ">>",
  "eslint.autoFixOnSave": true,
  "eslint.format.enable": true,
  "eslint.nodePath": "~/batsrc/.local/node_modules/",
  "javascript.validate.enable": false,
  "languageserver": {
    "bash": {
      "args": [
        "bash-language-server",
        "start"
      ],
      "command": "npx",
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "golang": {
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "hoon": {
      "command": "hoon-language-server",
      "filetypes": [
        "hoon"
      ]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    }
  },
  "prettier.printWidth": 80,
  "python.linting.pep8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.pythonPath": "python3",
  "rust-analyzer.checkOnSave.command": "clippy",
  "suggest.echodocSupport": true,
  "suggest.enableFloat": true,
  "suggest.enablePreview": true,
  "suggest.maxCompleteItemCount": 50,
  "suggest.timeout": 5000,
  "tsserver.npm": "/usr/bin/npm",
  "yaml.completion": true,
  "yaml.format.bracketSpacing": true,
  "yaml.format.enable": true,
  "yaml.format.printWidth": 88,
  "yaml.format.proseWrap": "always",
  "yaml.keyOrdering": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "ansible": [
      "*.yaml"
    ],
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.{yml,yaml}",
    "kubernetes": "*.k8s.yaml"
  },
  "yaml.validate": true
}
