{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "js", "javascript", "json", "ts", "typescript", "html", "yml", "yaml"],
  "codeLens.enable": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": true,
  "diagnostic.warningSign": ">>",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ]] ",
  "languageserver": {
    "bash": {
      "args": [
        "start"
      ],
      "command": "bash-language-server",
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "ccls": {
      "command": "ccls_DISABLED",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      },
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "golang": {
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "bash": {
      "command": "hoon-language-server",
      "filetypes": [
        "hoon"
      ]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    }
  },
  "suggest.echodocSupport": true,
  "suggest.enablePreview": true,
  "suggest.maxCompleteItemCount": 50,
  "suggest.timeout": 5000,
  "python.pythonPath": "python3",
  "python.linting.pylintEnabled": false,
  "python.linting.pep8Enabled": true,
  "eslint.nodePath": "~/batsrc/.local/node_modules/",
  "eslint.autoFixOnSave": true,
  "eslint.format.enable": true,
  "javascript.validate.enable": false,
  "tsserver.npm": "/usr/bin/npm"
}
