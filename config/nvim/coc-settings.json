{
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.floatActions": true,
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "js",
    "javascript",
    "json",
    "ts",
    "typescript",
    "html",
    "yml",
    "yaml",
    "rust",
    "c",
    "cpp",
    "h",
    "hpp"
  ],
  "coc.preferences.promptInput": true,
  "codeLens.enable": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": true,
  "diagnostic.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ]] ",
  "diagnostic.warningSign": ">>",
  "eslint.autoFixOnSave": true,
  "eslint.format.enable": true,
  "eslint.nodePath": "~/batsrc/.local/node_modules/",
  "javascript.validate.enable": false,
  "languageserver": {
    "bash": {
      "args": [
        "bash-language-server",
        "start"
      ],
      "command": "npx",
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "golang": {
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "hoon": {
      "command": "hoon-language-server",
      "filetypes": [
        "hoon"
      ]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    }
  },
  "prettier.printWidth": 80,
  "pyright.inlayHints.parameterTypes": false,
  "python.linting.pep8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.pythonPath": "python3",
  "rust-analyzer.checkOnSave.command": "clippy",
  "suggest.echodocSupport": true,
  "suggest.enableFloat": true,
  "suggest.enablePreview": true,
  "suggest.maxCompleteItemCount": 50,
  "suggest.timeout": 5000,
  "tsserver.npm": "/usr/bin/npm",
  "yaml.format.printWidth": 80,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/tasks.json": [
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml"
    ],
    "https://raw.githubusercontent.com/ansible/schemas/main/f/ansible.json#/$defs/tasks": [
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml"
    ]
  }
}
